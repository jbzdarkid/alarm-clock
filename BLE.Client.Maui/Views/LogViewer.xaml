<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BLE.Client.Maui.Views"
             x:Class="BLE.Client.Maui.Views.LogViewer"
             Title="Log Viewer">
    <StackLayout>
        <Button Text="Clear logs" FontSize="32" Margin="5" Clicked="ClearLogs"/>
        <ListView ItemsSource="{x:Static local:LogViewer.LogMessages}" Margin="5"/>
    </StackLayout>
</ContentPage>
